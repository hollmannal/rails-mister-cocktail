<h1><%= @cocktail.name %></h1>

<p><% @cocktail.doses.each do |dose| %></p>
<p><%=  dose.description%></p>
<p><%= dose.ingredient.name %></p>
<p><%= link_to "Remove", dose_path(dose), method: :delete %></p>
<% end %>


<%= link_to new_cocktail_dose_path(@cocktail.id) do %>
  <i class="fa fa-plus"></i> Add a new dose
<% end %>
<p><%= link_to "Back to all cocktails", cocktails_path %></p>

